<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
          <td><%= link_to  image_tag(image.url, width: "50%", class: (image.reviewed ? "img_reviewed" : "img_unreviewed") ), edit_image_path(image)%></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

